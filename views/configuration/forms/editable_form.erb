<div class="container">
		
	<div class="modal fade" id="float_modal" role="dialog" >
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<center><h2></h2></center>
				</div>
				<div class="modal-body">
					<div class="form-horizontal" id='menu_flotante' action="">
						<fieldset>
						
						<div class="form-group">
							<label class="col-md-4 control-label" for="type">Tipo</label>
							<div class="col-md-4">
							    <select id="type" name="" class="form-control">
							    	<option value="text">Texto</option>
							    	<option value="number">Numero</option>
									<option value="date">Fecha</option>
							    </select>
						  	</div>
						</div>
						
						<div class='required form-group'>
							<label class="control-label col-sm-2">Propiedad</label>
							<div class='col-md-8'>
								<input class='form-control input-md' type="text" id="label" required/>
							</div>
						</div>
						
						<div class="modal-footer">
				        	<button type="button" id="close_modal" class="btn btn-default" data-dismiss="modal">Cerrar</button>
							<button type="button" id="save" class="btn btn-primary">Guardar</button>
						</div>
						
						</fieldset>
		     		</div>
		    	</div>
			</div>
		</div>
	</div>
	
	<form class="form-horizontal" action="/update_form" method="post" name="nuevo" id="target" onsubmit="return formulario()">	
		<fieldset>
			<center>
				<legend>Formulario</legend>
				<div class="text-right">					
					<a href="#float_modal" id="new_field" class="btn btn-success btn-sm" data-toggle="modal">Nuevo Campo</a>
				</div>

				<!-- Form Hidden Values -->
				<input type="hidden" name="cc_form_old_name" value="<%= @form.form_name %>">
				<input type="hidden" name="cc_form_type" value="<%= @form.entity_type %>">
				<input type="hidden" name="cc_form_date" value="<%= @form.create_date %>">
				
				<div class="form-group">
				  <label class="col-md-2 control-label" for="form_name"></label>
				  <div class="col-md-8">
				    <div class="input-group">
				      <span class="input-group-addon">Nombre del Formulario</span>
				      <input id="form_name" name="cc_form_name" class="form-control" value ="<%= @form.form_name %>" type="text" required="" autofocus="">
				    </div>
				  </div>
				</div>
			</center>
			<div class="table-responsive">
				<table id="formTable" class="table table-striped">
					<thead>
				    	<tr>
				        	<th>Campo</th>
							<th></th>
							<th></th>
							<th>Editar</th>
							<th>Eliminar</th>
				     	</tr>
					</thead>
					<tbody class="body">
						<% @form.get_attributes_values.each do |attribute| %>
							<%= attribute.editable_type %>
						<%end%>					   
					</tbody>
				</table>
			</div>
			<center>
				<div class="control-group">
				    <a id='go_back' class="btn btn-default">Cancelar</a>
					<input type="submit" value="Aceptar" class="btn btn-primary" />					
				</div>
			</center>
		</fieldset>
	</form>
</div>
 


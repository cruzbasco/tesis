<h1>Formularios</h1>
<div class="table-responsive">
	<div class="text-right">
		<a href="/form_builder" class="btn btn-success btn-sm" data-toggle="modal">Nuevo Formulario</a>
	</div>
	<table class="table table-striped">
		<thead>
	    	<tr>
	        	<th>#</th>
	          <th>Nombre</th>		
				 <th></th>
				 <th></th>
				 <th></th>
				 <th></th>
				 <th>Opciones</th>
				 <th></th>
			      
	     	</tr>
		</thead>
		<tbody>
			<% numeroFormulario = 0 %>
			<% @forms.each do |form| %>
	        	<tr>
	            <td><%= numeroFormulario += 1 %></td>
							<td><%= form%></td>
							<td></td>
							<td></td>
							<td></td>
							<td><a href = "/show_form/<%= form %>"  class="btn btn-primary"> Ver </a></td>
							<td><a href = "/form_builder/<%= form %>"  class="btn btn-primary"> Editar </a></td>
							<td><a href="/delete_form/<%= form%>" class="btn btn-danger">Eliminar</a></td>
						</tr>
			<% end %>
 		</tbody>
	</table>
</div>